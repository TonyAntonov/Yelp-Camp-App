<% include ../partials/header%>

    <h1 style="text-align: center">Edit <%= campground.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                 <input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>" />
            </div>
            <div class="form-group">
                 <input type="number" name="campground[price]" value="<%= campground.price %>" class="form-control" min="0.01" step="0.01" />
            </div>
            <div class="form-group">
                 <input type="text" name="campground[image]" class="form-control" value="<%= campground.image %>" />
            </div>
            <div class="form-group">
                 <input type="text" name="campground[description]" class="form-control" value="<%= campground.description %>" />
            </div>
            <div class="form-group">
                 <button type="submit" class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>     
       </form>
        <a href="/campgrounds">Go back</a>
    </div>
  
     


<% include ../partials/footer%>